<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!--==========  RimTweaks - Incidents  ==========-->

  	<Operation Class="PatchOperationSequence">
	    <success>Always</success>
		<operations>
            <li Class="ModCheck.FindFile">
                <modName>Core</modName>
                <file>Incidents_Map_Threats.xml</file>
            </li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/IncidentDef[defName = "RaidEnemy"]/baseChance</xpath>
				<value>
					<baseChance>8.0</baseChance>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/IncidentDef[defName = "Infestation"]/baseChance</xpath>
				<value>
					<baseChance>1.0</baseChance>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/IncidentDef[defName = "Infestation"]/minRefireDays</xpath>
				<value>
					<minRefireDays>30</minRefireDays>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/IncidentDef[defName = "ManhunterPack"]/baseChance</xpath>
				<value>
					<baseChance>3.0</baseChance>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/IncidentDef[defName = "AnimalInsanityMass"]/baseChance</xpath>
				<value>
					<baseChance>2.0</baseChance>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/IncidentDef[defName = "AnimalInsanitySingle"]/baseChance</xpath>
				<value>
					<baseChance>3.5</baseChance>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/IncidentDef[defName = "AnimalInsanitySingle"]/minRefireDays</xpath>
				<value>
					<minRefireDays>5</minRefireDays>
				</value>
			</li>
		</operations>
	</Operation>
	
	<Operation Class="PatchOperationSequence">
	    <success>Always</success> 
		<operations>
            <li Class="ModCheck.FindFile">
                <modName>Core</modName>
                <file>Incidents_Map_Special.xml</file>
            </li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/IncidentDef[defName = "ShipChunkDrop"]/baseChance</xpath>
				<value>
					<baseChance>5</baseChance>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/IncidentDef[defName = "OrbitalTraderArrival"]/baseChance</xpath>
				<value>
					<baseChance>4</baseChance>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/IncidentDef[defName = "TraderCaravanArrival"]/baseChance</xpath>
				<value>
					<baseChance>5</baseChance>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/IncidentDef[defName = "VisitorGroup"]/baseChance</xpath>
				<value>
					<baseChance>5</baseChance>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/IncidentDef[defName = "TravelerGroup"]/baseChance</xpath>
				<value>
					<baseChance>5</baseChance>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/IncidentDef[defName = "RaidEnemyEscapeShip"]/baseChance</xpath>
				<value>
					<baseChance>2</baseChance>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>