<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!--==========  RimTweaks - Traders  ==========-->
  
	<Operation Class="PatchOperationSequence">
	    <success>Always</success> 
		<operations>
            <li Class="ModCheck.FindFile">
                <modName>Core</modName>
                <file>Storytellers.xml</file>
            </li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/StorytellerDef[defName = "Cassandra"]/comps/li[@Class="StorytellerCompProperties_AllyInteraction"]/minDaysPassed</xpath>
				<value>
					<minDaysPassed>4</minDaysPassed>
				</value>
			</li>
